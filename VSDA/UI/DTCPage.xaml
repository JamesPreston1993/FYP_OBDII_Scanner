<Page
    x:Class="VSDA.UI.DTCPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VSDA.UI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock FontSize="24" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Stored Codes" VerticalAlignment="Top"/>
        <StackPanel x:Name="StoredCodesGrid" HorizontalAlignment="Stretch" VerticalAlignment="Top"/>
        <TextBlock FontSize="24" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Pending Codes" VerticalAlignment="Top"/>
        <StackPanel x:Name="PendingCodesGrid" HorizontalAlignment="Stretch" VerticalAlignment="Top"/>
        <TextBlock FontSize="24" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Permanent Codes" VerticalAlignment="Top"/>
        <StackPanel x:Name="PermanentCodesGrid" HorizontalAlignment="Stretch" VerticalAlignment="Top"/>
        <Button x:Name="button" Content="Button" HorizontalAlignment="Center" VerticalAlignment="Stretch" Click="button_Click"/>
        
    </StackPanel>
</Page>
